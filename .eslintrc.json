{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": ["error", "unix"],
        "new-cap": "off",
        "no-trailing-spaces": "off",
        "max-len": ["error", {"ignoreStrings": true, "ignoreComments": true, "code": 100}],
        "brace-style": ["error", "stroustrup"],
        "object-curly-spacing": ["error", "always"]
    }
}